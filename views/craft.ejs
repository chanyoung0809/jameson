<%- include('header', {title: "Jameson", cssFiles: ["reset.css", "HeaderFooter.css", "history-craft.css"]}) %>
<div id="container">
    <div class="title">
        <h2 data-aos="fade-up" data-aos-duration="1000">Jameson Craft</h2>
        <ul class="titles craft" data-aos="fade-up" data-aos-duration="1000">
            <% craft.forEach((el, idx) => { %>
                <li data-target="#craft<%- idx %>"><a href="#"><%- el.title %></a></li>
            <% }) %>
        </ul>
    </div>
    <% craft.forEach((el, idx) => { %>
        <div class="wrap <%= (idx % 2 !== 0) ? 'on' : null %>" id="craft<%- idx %>" data-aos="fade-up" data-aos-duration="500" data-aos-delay="<%- idx * 50 %>">
            <div class="center">
                <div class="image-container" data-aos="<%- (idx % 2 !== 0) ? 'fade-right' : 'fade-left' %>" data-aos-duration="1000">
                    <img src="/img/<%- el.image %>" alt="Section Image">
                </div>
                <div class="text-container">
                    <h6 data-aos="<%- (idx % 2 !== 0) ? 'fade-right' : 'fade-left' %>" data-aos-duration="500"><%- el.subtitle %></h6>
                    <h2 data-aos="<%- (idx % 2 !== 0) ? 'fade-right' : 'fade-left' %>" data-aos-duration="500" data-aos-delay="100"><%- el.title %></h2>
                    <p data-aos="<%- (idx % 2 !== 0) ? 'fade-right' : 'fade-left' %>" data-aos-duration="500" data-aos-delay="200"><%- el.context %></p>
                </div>
            </div>
        </div>
    <% }) %>
    <div class="move_wrap" data-aos="fade-up" data-aos-duration="1000">
        <a href="/history" class="go_history">
            <img src="/img/recipe_glass_ontherock.svg" />
            <span>역사 소개</span>
        </a>
    </div>
</div>
<%- include('footer', {jsFiles: ["tabMenu.js", "history-craft.js"]}) %>
